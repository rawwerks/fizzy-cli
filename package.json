{
  "name": "@raw-works/fizzy-cli",
  "version": "1.0.3",
  "main": "dist/index.js",
  "bin": {
    "fizzy": "./dist/index.js"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "LICENSE.md",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "dev": "bun run src/index.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "docs": "bun run scripts/generate-docs.ts",
    "docs:report": "bun run scripts/docs-report.ts",
    "prepublishOnly": "npm run build && npm test",
    "release": "npm version patch && git push --follow-tags && npm publish",
    "release:minor": "npm version minor && git push --follow-tags && npm publish",
    "release:major": "npm version major && git push --follow-tags && npm publish"
  },
  "keywords": [
    "fizzy",
    "cli",
    "api",
    "ai-agent",
    "claude-code",
    "automation",
    "basecamp",
    "37signals",
    "project-management",
    "kanban",
    "task-management"
  ],
  "author": "Raymond Weitekamp",
  "license": "SEE LICENSE IN LICENSE.md",
  "description": "CLI for Fizzy (https://fizzy.do) - designed for AI agents like Claude Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/rawwerks/fizzy-cli.git"
  },
  "bugs": {
    "url": "https://github.com/rawwerks/fizzy-cli/issues"
  },
  "homepage": "https://github.com/rawwerks/fizzy-cli#readme",
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "marked": "^17.0.1",
    "marked-terminal": "^7.3.0",
    "ora": "^8.1.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@types/marked": "^6.0.0",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3"
  }
}
